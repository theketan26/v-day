# Environment Variables for V-Day App
# Copy this file to .env.local and fill in your actual values

# Database Configuration
# The connection string for your Neon database
DATABASE_URL=""

# Environment Configuration
# Set to 'production' for production builds, 'development' for development
NODE_ENV="development"

# Next.js Configuration
# The URL of your application (used for generating absolute URLs)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Authentication Secrets (if you add authentication features)
# NEXTAUTH_SECRET="your-nextauth-secret-here"
# NEXTAUTH_URL="http://localhost:3000"

# Optional: External API Keys (if you integrate with external services)
# Add any API keys for external services you might use in the future
# OPENAI_API_KEY="your-openai-api-key-here"
# STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key-here"
# STRIPE_SECRET_KEY="your-stripe-secret-key-here"

# Optional: Email Configuration (if you add email features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Azure Blob Storage Configuration (for image uploads)
AZURE_STORAGE_ACCOUNT_NAME=""
AZURE_STORAGE_ACCOUNT_KEY=""
AZURE_STORAGE_CONTAINER_NAME="romantic-app-images"
# SAS token expiry in hours (default: 24)
AZURE_STORAGE_SAS_EXPIRY_HOURS="24"